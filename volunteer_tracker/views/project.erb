<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Project information</h2>
      <h3><%= @project_info["name"] %></h3>
      <h4>Volunteers:</h4>
      <ul>
        <% @volunteers.each do |volunteer| %>
          <li><%= volunteer["name"] %> </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6 edit">
      <h2>Edit project information</h2>
      <form action="/project/edit/<%= @project_info["id"] %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <input class="form-control" type="text" name="new-name" placeholder="New name">
        <button class="btn" type="submit">Save changes</button>
      </form>

      <form action="/project/delete/<%= @project_info["id"] %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <button class="btn btn-danger" type="submit">Delete project</button>
      </form>
    </div>
  </div>
</div>
