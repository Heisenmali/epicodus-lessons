<h1>{{model.artist}}</h1>
<img src="{{model.image}}" alt="" />
<p id="review">
  {{model.review}}
</p>

<h3>Comments</h3>
{{#each model.comments as |comment|}}
  {{comment-tile comment=comment}}
{{/each}}

{{new-comment addComment='addComment' model=model}}
<hr><br>

<h3>Update Album</h3>
{{update-album album=model update='update'}}

