<%= image_tag @photo.image %>
<%= @photo.description %>

<br>

<% @tagged_users.each do |user| %>
  <%= user.email %>
  <%= button_to 'X', {controller: 'tags', action: 'destroy', photo_id: @photo.id, user_id: user.id}, method: "delete" %>
<% end %>

<br>

<% if current_user.id == @photo.user_id %>

  <%= link_to 'tag a user', {controller: 'tags', action: 'new', photo_id: @photo.id} %>
  <%= link_to 'edit photo', edit_photo_path(@photo) %>
  <%= link_to 'destroy', photo_path(@photo), method: "delete" %>
<% end %>
