<%= render('layouts/errors', :object => @sighting) %>

<%= form_for [@animal, @sighting] do |f| %>
  <select name="region_id" id="region_id">
    <% @regions.each do |region| %>
      <%= options_for_select([[region.name, region.id]]) %>
    <% end %>

  </select>
  <p><%= f.submit %></p>

<% end %>
