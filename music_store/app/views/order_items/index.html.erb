<div class="about ph7 pv3">
  <h2>Shopping Cart</h2> 
<%= flash[:notice] %>
  <% if @items %>
    <% @items.each do |item| %>
      <div class="bb b--moon-gray pv4">
        <%= link_to item.product.name, product_path(item.product) %>
        <%= link_to 'x', {controller: 'order_items', action: 'destroy', id: item.id, product_id: item.product.id}, method: "delete", class: "fr" %>
        <span class="fr pr5">$<%= item.product.price %></span>
        <br>
      </div>
    <% end %>
    <span class="fr pv5">Total: $<%= @amount.round(2) %></span>
    <%= render partial: 'charges/new' %>
  <% end %>
</div>