


<div class="container">

  <div class="row">
    <div class="col-md-6">

      <form action="/division" method="post">
      <input class="form-control" type="text" name="name" placeholder="Name a division">
      <button class="btn" type="submit">Add division</button>
      </form>

      <% @divisions.each do |division| %>
      <a href="/division/<%= division['id'] %>"><li><%= division["name"] %></li></a>
      <% end %>
    </div>


    <div class="col-md-6">
      <form action="/employee" method="post">
      <input class="form-control" type="text" name="name" placeholder="Name a employee">
      <button class="btn" type="submit">Add employee</button>
      </form>
      <% @employees.each do |employee| %>
        <a href="/employee/<%= employee['id'] %>"><li><%= employee["name"] %></li></a>
      <% end %>
    </div>
  </div>

</div>
