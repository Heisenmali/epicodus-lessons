<% @messages.each do |message| %>
  <p><%= User.find(message.user_id).username %><%= " - "%><%= message.created_at %><%= " - "%><%= message.content %></p>
<% end %>

<form action="/chat/messages/new" method="post">
  <label for="new-message"></label>
  <input type="text" name="new-message">
  <button type="submit">Send</button>
</form>
