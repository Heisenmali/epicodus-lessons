<h1>Edit train: <%= @train['name']%></h1>

<form action="/train/edit/<%= @train['id']%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" placeholder="<%= @train['name']%>" name="name">
  <button type="submit">Make changes</button>
</form>

<form action="/train/edit/<%= @train['id']%>" method="post">
  <% @cities.each do |city| %>
  <div class="checkbox">
    <label>
      <input type="checkbox" name="city_ids[]" value="<%= city['id'] %>"><%= city['name'] %>
     </label>
   </div>
  <% end %>

  <button type="submit">Add Cities</button>
</form>
