<h1>Welcome to the cookbook!</h1>

<h2>Table of Contents</h2>
<% if @recipes.any? %>
  <ul>
    <% @recipes.each do |recipe| %>
    <li><a href="/recipe/<%= recipe.id %>"><%= recipe.name %></a></li>


    <% end %>
  </ul>
<% end %>

<br>
<hr>
<br>

<form id="add_recipe" action="/recipe/" method="post">
  <label for="recipe_name">Name a new recipe:  </label>
  <input type="text" name="recipe_name" id="recipe_name" required>
  <button type="submit">Create Recipe</button>
</form>
