<h2>Welcome to the brand page</h2>
<h3><%= @brand.name %></h3>

<% @brand.stores.each do |store| %>
<p>Stores: <%= store.name %></p>
<% end %>

<form action="/brand/<%= @brand.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="new-name" class="f6 b db mb2">Name</label>
  <input type="text" name="new-name" value="<%= @brand.name %>" class="input-reset ba b--black-20 pa2 mb2 db w-100">
  <label for="new-price" class="f6 b db mb2">Price</label>
  <input type="text" name="new-price" value="<%= @brand.price %>" class="input-reset ba b--black-20 pa2 mb2 db w-100">
  <div class="mt3"><input class="b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6" type="submit" value="Make changes"></div>
</form>

<form class="pa4" action="/brand/<%= @brand.id %>/edit" method="post">
  <fieldset id="favorite_movies" class="bn">
    <legend class="fw7 mb2">Stores</legend>
    
    <% @stores.each do |store| %>
    <div class="flex items-center mb2">
      <input class="mr2" type="checkbox" id="<%= store.name %>" name="store_ids[]" value="<%= store.id %>">
      <label for="spacejam" class="lh-copy"><%= store.name %></label>
    </div>
    <% end %>
  
  </fieldset>
  <div class="mt3"><input class="b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6" type="submit" value="Add stores"></div>
</form>


<form action="/brand/<%= @brand.id %>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <div class="mt3"><input class="b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6" type="submit" value="Remove brand"></div>
</form>