<% content_for(:title, 'New Review') %>

<%= render "layouts/errors", :object => @review %>

<div class="pa3">
  <%= form_for [@product, @review] do |f| %>
    <%= f.hidden_field :product_id, { :value => params["product_id"]} %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end %>
</div>