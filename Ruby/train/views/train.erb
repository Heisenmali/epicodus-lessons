<h1>Train: <%= @train["name"] %></h1>

<h3>This train travels to:</h3>
<% @train_cities.each_with_index do |city, index| %>
  <h3><%= "#{city['name']} : #{@times[index]}" %></h3>
<% end %>
<a href="/train/edit/<%= @train['id']%>">Edit train</a>

<form action="/train/delete/<%= @train['id']%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit">Delete train</button>
</form>
